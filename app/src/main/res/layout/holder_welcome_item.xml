<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/welcome_item_title"
            android:layout_centerHorizontal="true"
            android:padding="16dp"/>
    <ImageView
            android:layout_above="@id/welcome_item_description"
            android:layout_below="@id/welcome_item_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:id="@+id/welcome_item_image"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/welcome_image" />
    <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/welcome_item_description"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="28dp"
            android:layout_height="wrap_content" />
</RelativeLayout>
