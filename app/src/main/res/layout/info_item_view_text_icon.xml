<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:weightSum="10">
    <TextView
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorGrayDark"
            android:layout_weight="4"
            android:id="@+id/info_item_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_toStartOf="@id/info_item_icon"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@color/colorGrayLight"
                android:id="@+id/info_item_hint"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/info_item_icon"/>
        <ImageView
                android:tint="@color/colorAccent"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:contentDescription="@string/info_item_icon"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/info_item_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>